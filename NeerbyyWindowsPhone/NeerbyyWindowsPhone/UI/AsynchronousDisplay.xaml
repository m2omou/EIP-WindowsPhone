<UserControl x:Class="NeerbyyWindowsPhone.UI.AsynchronousDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="40" d:DesignWidth="480">
    
    <StackPanel x:Name="stack_panel" Visibility="Collapsed">
        <TextBlock TextWrapping="Wrap" Text="" FontFamily="Segoe WP SemiLight" x:Name="display_status" Foreground="#FFBFBFBF"/>
        <ProgressBar IsIndeterminate="True" Foreground="#FF4065C9" x:Name="display_progress_bar" Height="10"/>
    </StackPanel>
</UserControl>