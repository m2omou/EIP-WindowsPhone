<UserControl x:Class="NeerbyyWindowsPhone.UI.Message"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="97" Width="440" Background="#FFD1D1D1">
    
    <Grid x:Name="LayoutRoot" Margin="0,0,0,10" Background="#FFA6C1D1">
    	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="67" Width="420" Foreground="#FF424242" x:Name="content" Margin="10,10,0,0"/>

    </Grid>
</UserControl>