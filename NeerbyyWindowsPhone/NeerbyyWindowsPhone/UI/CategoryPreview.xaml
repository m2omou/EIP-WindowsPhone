<UserControl x:Class="NeerbyyWindowsPhone.UI.CategoryPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="90">
    
    <Grid x:Name="LayoutRoot" Margin="0,0,0,20" Background="#FFE8E8E8">
    	<StackPanel Tap="StackPanel_Tap" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="480">
    		<TextBlock x:Name="display_name" TextWrapping="Wrap" Text="Restaurants" Height="30" Margin="20,20,0,0" Foreground="#FF535353" FontFamily="Segoe WP Black"/>
    	</StackPanel>
    </Grid>
</UserControl>